<?xml version="1.0" encoding="UTF-8"?>
<!-- Log4j configuration -->
<Configuration status="info">
    <Appenders>
        <Console name="console" target="SYSTEM_ERR">
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info" additivity="false">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>